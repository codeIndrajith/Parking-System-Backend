
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(User)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  vehicles       Vehicle[]
  parkingLocation ParkingLocation[]
  bookings       Booking[]
}


model Vehicle {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  plateNo   String   @unique
  brand     String?
  model     String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ParkingLocation {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdBy String
  admin     User     @relation(fields: [createdBy], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blocks    Block[]
}

model Block {
  id                 String   @id @default(uuid())
  locationId         String
  parkingLocation    ParkingLocation @relation(fields: [locationId], references: [id])
  blockName          String
  totalSlots         Int
  availableSlots     Int
  isFull             Boolean   @default(false) 
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  bookings            Booking[]
}

// Booking Records (works for both Online & Walk-in)
model Booking {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  bookingType   BookingType?
  status        BookingStatus @default(BOOK)
  blockId       String
  block         Block     @relation(fields: [blockId], references: [id])
  date          String?
  entryTime     String?
  exitTime      String?
  duration      Int?  
  trackTime     Int?    
  amount        Float?   
  bookingId     String         @unique 
  paymentStatus PaymentStatus @default(UNPAID)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


// enums

enum Role {
  Admin
  User
}

enum BookingType {
  ONLINE
  WALK_IN
}

enum BookingStatus {
  BOOK
  PAY    
  CONFIRMED   
  COMPLETED   
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  PAID
}