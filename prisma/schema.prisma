
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(User)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  vehicles       Vehicle[]
  parkingLocation ParkingLocation[]
}


model Vehicle {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  plateNo   String   @unique
  brand     String?
  model     String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ParkingLocation {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdBy String
  admin     User     @relation(fields: [createdBy], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blocks    Block[]
}

model Block {
  id                 String   @id @default(uuid())
  locationId         String
  parkingLocation    ParkingLocation @relation(fields: [locationId], references: [id])
  blockName          String
  totalSlots         Int
  availableSlots     Int
  isFull             Boolean   @default(false) 
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}


// enums

enum Role {
  Admin
  User
}